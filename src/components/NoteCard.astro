---
export type Note = {
  title: string;
  slug: string;
  description: string;
  cover: string;
  tags: string[];
  date: Date; // ISO: YYYY-MM-DD
};

type Props = {
  note: Note;
};

const { note } = Astro.props as Props;
---

<a class="card"  href={`/notes/${note.slug}/`}>
  <div class="cover">
    <img src={note.cover} alt={note.title} loading="lazy" decoding="async" />
    <div class="shade" aria-hidden="true"></div>
    <div class="meta">
      <span class="date">{note.date.toLocaleDateString("zh-CN")}</span>
      <span class="date">{note.date.toLocaleDateString("zh-CN")}</span>

    </div>
  </div>

  <div class="body">
    <h3 class="title">{note.title}</h3>
    <p class="description">{note.description}</p>

    <div class="tags" aria-label="tags">
      {note.tags.map((t) => (
        <span class="tag" data-tag={t}>{t}</span>
      ))}
    </div>
  </div>
</a>
